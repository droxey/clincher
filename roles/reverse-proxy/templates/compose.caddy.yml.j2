services:
  caddy:
    image: caddy:{{ caddy_version }}
    container_name: openclaw-caddy
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy-data:/data
      - caddy-config:/config
    networks:
      - ingress-net
      - proxy-net
    restart: unless-stopped

networks:
  proxy-net:
    external: true
    name: openclaw_proxy-net
  ingress-net:
    external: true
    name: openclaw_ingress-net

volumes:
  caddy-data:
  caddy-config:
